<div class="container">
  <div class="row">
    <div class="d-flex justify-content-between">
      <h1>Flats</h1>
      <%= link_to "Add flat", new_flat_path %>
    </div>

    <% @flats.each do |flat| %>
      <%= link_to flat_path(flat), class: "col-2 m-3 align-items-center" do %>
        <div class="card align-items-center p-2" style="color: black;">
          <p><%= flat.name %></p>
          <p><%= flat.address %></p>
          <p><%= flat.description %></p>
          <p>Â£<%= flat.price_per_night %> per night</p>
          <p><%= flat.number_of_guests %> max guest<%= "#{flat.number_of_guests == 1 ? "" : "s"}" %></p> <%# Just to pluralise it properly %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
